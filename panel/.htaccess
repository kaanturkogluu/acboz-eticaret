# URL yönlendirmeyi aktif et
RewriteEngine On
RewriteBase /panel/

# classes klasörüne erişim yasağı
RewriteRule ^classes/ - [F,L]

# .php uzantısını gizle
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.+)$ $1.php [L]

# Default route to pages/anasayfa.php when hitting /panel/ or /panel
DirectoryIndex index.php pages/anasayfa.php

# Short route for anasayfa
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^anasayfa/?$ pages/anasayfa.php [L]

# giriş sayfası
RewriteRule ^giris/?$ pages/giris.php [L]

# özel 404 sayfası
ErrorDocument 404 /eticaret/panel/pages/404.php
