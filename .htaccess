RewriteEngine On
RewriteBase /eticaret/

# Keep existing files and directories working normally first
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule . - [L]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule . - [L]

# Route /eticaret/giris to login page
RewriteRule ^giris/?$ panel/pages/giris.php [L]

# Route /eticaret/panel to panel index
RewriteRule ^panel/?$ panel/index.php [L]

